<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

    <class name="entidades.Especialista" table="especialista">

        <id name="OID" type="string">
            <column name="OIDEspecialista"/>
            <generator class="uuid2"/>
        </id>

        <property name="nroLegajoEspecialista" type="int">
            <column name="nroLegajoEspecialista"/>
        </property>

        <property name="cuitEspecialista" type="int">
            <column name="cuitEspecialista"/>
        </property>
        
        <property name="nombreApellidoEspecialista" type="date">
            <column name="nombreApellidoEspecialista"/>
        </property>
        
        <property name="fechaHoraFinVigenciaEspecialista" type="date">
            <column name="fechaHoraFinVigenciaEspecialista"/>
        </property>
        
        <many-to-one name="sector" class="entidades.Sector" column="OIDSector" not-null="true"/>
        
    </class>

</hibernate-mapping>